ACTOR ZombieScientist 327
{
  Game Doom
  obituary "%o was axe-murdered by a scientist Taken."
  health 30
  mass 90
  speed 8
  Radius 20
  Height 52
  painchance 200
  seesound "grunt/sight"
  painsound "grunt/pain"
  deathsound "grunt/death"
  activesound "grunt/active"
  MONSTER
  +FLOORCLIP
  States
  {
   Spawn:
    SCZA AB 10 A_Look
    loop
  See:
    SCZA AABBCCDD 4 A_Chase
    loop
  Melee:
    SCZA E 8 A_FaceTarget
    SCZA F 16 A_CustomMeleeAttack (random (2, 6) *5, "KnifeHit", "skeleton/swing")
    SCZA E 4
    goto See
  Pain:
    SCZA G 3
    SCZA G 3 A_Pain
    goto See
  Death:
    SCZA H 5
    SCZA I 5 A_Scream
    SCZA J 5 A_NoBlocking
    SCZA K 5
    SCZA L 5
    SCZA M 5
    SCZA N -1
    stop
  XDeath:
    SCZA O 5
    SCZA P 5 A_XScream
    SCZA Q 5 A_NoBlocking
    SCZA RSTUV 5
    SCZA W -1
    stop
  Raise:
    SCZA MLKJIH 5
    goto See
  }
}

